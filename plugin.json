  "paramSchema": [
    {
      "title": "Host",
      "name": "host",
      "description": "The vCenter hostname",
      "type": "string",
      "default": "",
      "required" : true
    },
    {
      "title" : "Port",
      "name" : "port",
      "description" : "The vCenter port",
      "type" : "integer",
      "default" : 443,
      "required" : true
    },
    {
      "title": "User Name",
      "name": "username",
      "description": "User name required to connect to vCenter",
      "type": "string",
      "default": "",
      "required": true
    },
    {
      "title": "Password",
      "name": "password",
      "description": "Password required to connect to vCenter",
      "type": "string",
      "default": "",
      "required": true
    },
    {
      "title": "Polling Interval",
      "name": "pollInterval",
      "description": "The polling interval (in milliseconds) to call the vmware collector",
      "type": "integer",
      "default": 20000,
      "required": true
    },
    {
      "title": "Max depth",
      "name": "maxDepth",
      "description": "Max depth to traverse vCenter for discovering VMs",
      "type": "integer",
      "default": 10,
      "required": true
    }
  ]
}
